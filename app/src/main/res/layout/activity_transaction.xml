<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abc.bankverficationcenter.Transaction"
    android:background="@drawable/bg"
    android:weightSum="5"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill Transaction Details"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_weight="1"
        android:textColor="#fffefe"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"


        >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/capture"
           android:layout_weight="1"
           />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/capbtn"
            android:textColor="#fffefe"
            android:background="#da117397"
            android:text="Capture"
            android:layout_weight="1.5"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edname"
        android:hint="Client name"
        android:textSize="18dp"
        android:layout_weight="0.3"
        android:textColor="#fffefe"
        android:textColorHint="#6eb8dbdf"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edamount"
        android:hint="Amount of payment"
        android:textSize="18dp"
        android:layout_weight="0.3"
        android:textColor="#fffefe"
        android:textColorHint="#6eb8dbdf"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edleftamt"
        android:hint="Left amount"
        android:textSize="18dp"
        android:layout_weight="0.3"
        android:textColorHint="#6eb8dbdf"
        android:textColor="#fffefe"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edcomment"
        android:hint="Remark"
        android:textSize="18dp"
        android:layout_weight="0.3"
        android:textColorHint="#6eb8dbdf"
        android:textColor="#fffefe"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitTrans"
        android:textColor="#fffefe"
        android:background="#da117397"
        android:text="Submit"
        android:textSize="18dp"
        android:layout_gravity="center"
        />




</LinearLayout>
