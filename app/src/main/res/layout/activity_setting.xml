<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abc.bankverficationcenter.Setting"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/txtwn"
        android:text="Wireless Network"
        android:textColor="#6eb8dbdf"
        android:textSize="22dp"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:id="@+id/txtsim"
        android:text="Sim card and mobile network"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_sim_card_black_24dp"
        android:drawablePadding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtwifi"
        android:layout_weight="0.3"
        android:text="Wi - Fi"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_wifi_black_24dp"
        android:drawablePadding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtbt"
        android:layout_weight="0.3"
        android:text="Bluetooth"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_bluetooth_black_24dp"
        android:drawablePadding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtph"
        android:layout_weight="0.3"
        android:text="Personal Hotspot"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_wifi_tethering_black_24dp"
        android:drawablePadding="10dp"
        android:paddingBottom="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtper"
        android:text="Personal"
        android:textColor="#6eb8dbdf"
        android:textSize="22dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtdis"
        android:layout_weight="0.3"
        android:text="Display"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_wb_sunny_black_24dp"
        android:drawablePadding="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtwall"
        android:layout_weight="0.3"
        android:text="Wallpaper"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_insert_photo_black_24dp"
        android:drawablePadding="10dp"
        android:paddingBottom="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtsd"
        android:text="System and Device"

        android:textColor="#6eb8dbdf"
        android:textSize="22dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtlcp"
        android:layout_weight="0.3"
        android:text="Lock screen and password"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtbat"
        android:layout_weight="0.3"
        android:text="Battery"
        android:textColor="#fffefe"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_battery_std_black_24dp"
        android:drawablePadding="10dp"
        />
</LinearLayout>
